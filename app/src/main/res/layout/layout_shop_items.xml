<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/shopImg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_update_black_24dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/txtShop"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/priceShop"
                android:hint="shop text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:hint="shop price"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/descShop"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtShop"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:hint="shop description" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
